{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "es2017",
            "esnext.asynciterable",
            "dom"
        ],
        "allowJs": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": false,
        "strict": true,
        "strictNullChecks": false,
        "outDir": "lib",
        "rootDir": "src"
    },
    "include": [
        "custom_typings/**/*.ts",
        "src/**/*"
    ]
}